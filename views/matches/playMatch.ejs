<% include ../partials/header %>

<form method="POST" action="/matches" id="teamsForm">
        <div class = "form-group">
             <select type="text" name="homeTeam" form="teamsForm">
                <% teams.forEach(team => { %>
                        <option type="text" value="<%= team._id %>"><%= team.name %></option>
                <% }) %>
            </select> 
        </div>
        <div class = "form-group">
             <select type="text" name="awayTeam" form="teamsForm">
                <% teams.forEach(team => { %>
                        <option type="text" value="<%= team._id %>"><%= team.name %></option>
                <% }) %>
            </select> 
        </div>
        <div class = "form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
</form>
<% include ../partials/footer %>
