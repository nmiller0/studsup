<% include ../partials/header %>

<div class = "container-fluid" >
    <div class ="row">
        <div class = "col-sm">
            <h2>Results</h2>
            <% matches.forEach(match => { %>
                <p><a href="/matches/<%= match.id  %>"><%= match.homeTeam %> <%= match.homeGoals %> - <%= match.awayGoals %> <%= match.awayTeam %></a></p>
            <% }) %>
        </div>
        <div class = "col-sm">
            <h2>Teams</h2>
                <% teams.forEach(team => { %>
                    <p><a href="/teams/<%= team._id  %>"> <%= team.name %> </a></p>
                <% }) %>
            
            <p>
                <a href="/leagues/<%= leagueId %>/playLeagueMatch"   class="btn btn-primary" role="button">Play League Match</a>
            </p>
        </div>
        <div class = "col-sm">
            <h2>Standings</h2>
            <table class="table table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Team</th>
                        <th scope="col">GP</th>
                        <th scope="col">W</th>
                        <th scope="col">L</th>
                        <th scope="col">D</th>
                        <th scope="col">GD</th>
                        <th scope="col">P</th>
                    </tr>
                </thead>
                <tbody>
                    <% var num = 1; %> 
                    <% table.forEach(team => { %> 
                    <tr>
                        <th scope="row"><%= num++ %> </th>
                        <td><a href="/teams/<%= team._id  %>"> <%= team.name %> </a></td>
                        <td><%= team.gp %></td>
                        <td><%= team.wins %></td>
                        <td><%= team.losses %></td>
                        <td><%= team.draws %></td>
                        <td><%= team.gd %></td>
                        <td><%= team.points %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<% include ../partials/footer %>